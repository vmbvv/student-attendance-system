PORT=3000
DATABASE_URL=postgresql://user:password@localhost:5432/postgres
PGSSL=false

# CORS
# Comma-separated list of allowed origins (e.g. http://localhost:5173)
# In production, if unset, CORS is disabled by default.
CORS_ORIGINS=

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# Teacher registration
# If set, /user/register-teacher requires a matching token.
TEACHER_REGISTRATION_TOKEN=
